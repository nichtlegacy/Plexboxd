# Discord configuration
DISCORD_TOKEN=your_discord_token_here
# The bot token from the Discord Developer Portal to authenticate the bot.
# Get it from: https://discord.com/developers/applications

DISCORD_LOGGING_WEBHOOK_URL=your_webhook_url_here
# Webhook URL for sending logs to a Discord channel.
# Create one in Discord under Server Settings -> Integrations -> Webhooks

# Discord user ID to mention in notifications (just the numeric ID, no <@>)
DISCORD_USER_ID=123456789012345
# Your Discord user ID to be notified when a movie is watched.
# Right-click your profile in Discord and select "Copy ID" (Developer Mode must be enabled).

# Plex configuration
PLEX_USERNAME=your_plex_username
# Your Plex account username used to identify your activity on the Plex server.

PLEX_TOKEN=your_plex_token_here
# Authentication token for accessing the Plex server API.
# Find it in Plex under Settings -> General -> "View XML" on a library item, look for 'token'.

PLEX_SERVER_URL=http://your_plex_server_ip:32400
# URL of your Plex server, including IP and port (default is 32400).
# Example: http://192.168.1.100:32400

EXCLUDED_LIBRARIES=your_excluded_library
# Comma-separated list of Plex library names to exclude from notifications.
# Movies watched from these libraries will not trigger Discord notifications.
# Example: EXCLUDED_LIBRARIES=4K Movies,Kids Movies,Test Library

NOTIFY_CHANNEL_ID=your_channel_id_here
# ID of the Discord channel where movie notifications will be sent.
# Right-click a channel in Discord and select "Copy ID" (Developer Mode must be enabled).

GUILD_ID=your_guild_id_here
# ID of the Discord server (guild) where the bot operates.
# Right-click your server icon in Discord and select "Copy ID" (Developer Mode must be enabled).

# Letterboxd configuration
LETTERBOXD_USERNAME=your_letterboxd_username
# Your Letterboxd username for logging into the service.

LETTERBOXD_PASSWORD=your_letterboxd_password
# Your Letterboxd password for authentication.
# Keep this secure and never share it publicly!

DATE_THRESHOLD_HOUR=7
# Hour (in 24-hour format) to determine the cutoff for assigning movie watch dates.
# If a movie is watched before this hour (e.g., 7 = 7:00 AM), itâ€™s logged as the previous day.
# Range: 0 (midnight) to 23 (11 PM). Default is 7.